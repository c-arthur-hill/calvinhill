{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
      "env.d.ts",
    "./resources/ts/**"
  ],
  "exclude": ["src/**/__tests__/*", "node_modules", "vendor"],
  "compilerOptions": {
      "target": "es5",
      "strict": true,
      "module": "es2015",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "paths": {
          "@/*": ["./resources/js/*"]
      }
  }
}
